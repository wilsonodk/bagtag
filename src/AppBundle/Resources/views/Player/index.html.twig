{# src/AppBundle/Resources/views/Player/index.html.twig #}
{% extends "::base.html.twig" %}

{% block title %}Player{% endblock %}

{% block body %}
    <div class="container">
        <h2>{{ player.name}} <span class="badge">Rank: {{ player.rank }}</span></h2>

        {% if not player.active %}<p><span class="label label-warning">Disabled</span></p>{% endif %}

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Stores</h3>
            </div>

            <div class="list-group">
                {% for store in player.stores %}
                    <a class="list-group-item" href="{{ path('store_by_id', {'id': store.id}) }}">{{ store.name }}</a>
                {% endfor %}
            </div>
        </div>

        <p><a class="btn btn-default btn-sm" href="{{ path('edit_player_by_id', {'id': player.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Update Player</a></p>
    </div>
{% endblock %}
