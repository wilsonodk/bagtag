{# src/AppBundle/Resources/views/Store/add.html.twig #}
{% extends "::base.html.twig" %}

{% block title %}{{ action }} Store{% endblock %}

{% block body %}
    <div class="container">
        <h2>{{ action }} Store</h2>

        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}

        {% if action == 'Update' %}
            {% set store_state %}{% if store.active %}Disable{% else %}Enable{% endif %}{% endset %}
            <p><a class="btn btn-warning btn-xs" href="{{ path('toggle_store_by_id', {'id': store.id}) }}">{{ store_state }} {{ store.name }}</a></p>
        {% endif %}
    </div>
{% endblock %}
